<?xml version="1.0" encoding="utf-8"?>

<com.ugene.postdownload.app2.ui.CheckableRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                       android:layout_width="match_parent"
                                                       android:layout_height="wrap_content"
                                                       style="@style/AppTheme.TrackList.Item">

    <TextView
        android:id="@+id/song_list_item_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:duplicateParentState="true"
        style="@style/AppTheme.TrackList.Item.Field.Artist"/>

    <TextView
        android:id="@+id/song_list_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/song_list_item_artist"
        android:duplicateParentState="true"
        style="@style/AppTheme.TrackList.Item.Field.Title"/>

    <CheckBox
        android:id="@+id/song_list_item_is_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignBaseline="@id/song_list_item_title"
        android:duplicateParentState="true"
        style="@style/AppTheme.TrackList.Item.CheckBox"/>

</com.ugene.postdownload.app2.ui.CheckableRelativeLayout>
